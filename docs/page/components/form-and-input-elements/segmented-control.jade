      iframe.example__iframe(
        src=relative('/components/form-and-input-elements/demos/segmented-control-stacked.html')
        data-iframe-resizer
      )

.toggle
  .toggle__button(data-info, data-target='#code-stacked')
    +svg('source', ['icon-svg', 'toggle__icon'])
    span See code
  .toggle__content#code-stacked
    .tab-panel(data-tab, data-tab-default='html')
      .tab-panel__header
        .tab-panel__header__tabs
          .tab-panel__header__tab(data-tab-toggle='html') HTML
      .tab-panel__content
