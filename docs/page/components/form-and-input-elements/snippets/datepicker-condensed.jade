---
title: Condensed-Datepicker
template: demo.jade
---

include /components/includes/mixins.jade

.l-container
  .form
    .form__group
      label.form__group__label
        .form__group__label__text Form label
      .form__group__control
        .datepicker.datepicker--condensed#myCondensedDatepicker(
          data-datepicker-watch="#myCondensedDatepickerInput",
          data-datepicker-display-week,
          data-datepicker-icon-prev=relative('/images/icons.svg#arrow-left'),
          data-datepicker-icon-next=relative('/images/icons.svg#arrow-right')
        )
          .datepicker__trigger(data-datepicker="#myCondensedDatepicker")
            +svg('calendar', 'datepicker__trigger__icon')
          .datepicker__input
            input(type='text').control.control--input.control--condensed#myCondensedDatepickerInput
