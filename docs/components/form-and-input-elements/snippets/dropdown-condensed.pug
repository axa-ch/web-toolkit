include /components/includes/mixins.pug

.dropdown(data-dropdown)
  .dropdown__label.dropdown__label--condensed(data-dropdown-label)
    +svg('arrow-bottom', 'dropdown__label__icon dropdown__label__icon--condensed')
    .dropdown__label__text(data-dropdown-text)
  select.dropdown__select(data-dropdown-select)
    option Schweiz
    option Regenbogenland

